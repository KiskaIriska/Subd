package ru.ulstu.repository;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.stereotype.Repository;
import ru.ulstu.model.Request;

@Repository
public interface RequestRepository extends JpaRepository<Request, Integer> {
    List<Request> findByName(String name);
    @Query("SELECT m.messageText FROM Messages m WHERE m.users.usersId = 4 AND m.thread.threadsId IN (SELECT t FROM Threads t WHERE t.boards.boardsId = 0)")
    public List<Request> getStudentMessages();
}